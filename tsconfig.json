{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "rootDirs": ["src", "test"],
    "outDir": "public/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  
  "include": [
    "src/**/*.ts", "test/integration/*.ts"] 
}